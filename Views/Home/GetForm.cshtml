@model Cat


<div class="center-vertical-container">
    <h1>Add New Cat</h1>

    @if (TempData["msg"] != null)
    {
        <div class="alertMessage">
            @TempData["msg"];
        </div>
    }

    <form asp-controller="Home" asp-action="Add" method="post" class="form-style" enctype="multipart/form-data">
        <div class="form-group">
            <label for="id1">Cat Name</label>
            <input class="form-control" type="text" id="name" asp-for="Name">
        </div>
        <div class="form-group">
            <label for="id2">Age</label>
            <input class="form-control" type="text" id="age" asp-for="Age">
        </div>
        <div class="form-group">
            <label for="id3">Breed</label>
            <input class="form-control" type="text" id="breed" asp-for="Breed">
        </div>
        <div class="form-group">
            <input type="file" id="image" name="Image" accept="image/*" asp-for="Image">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary" >Add Cat</button>
        </div>
    </form>
    <img/>
</div> 